<h1>Welcome to HKN Gear Store</h1>
<h2>Currently beta testing</h2>

<h2><%= link_to "Add new Product", :controller => "product", :action => "new" %></h2>

<% @products.each do |product| %>
	<h3><%= link_to product.name, show_path(product) %></h3>
	<p><%= link_to 'Delete', delete_path(product), method: :destroy, confirm: 'Are you sure you want to delete this product?' %></p>
	<p><%= link_to 'Edit', edit_path(product) %></p>
<% end %>