<h1>
	There <%= if @dept_tour_requests.length == 1 then 'is' else 'are' end %> 
	<%= @dept_tour_requests.length %> outstanding or pending department tour 
	request<%= if @dept_tour_requests.length == 1 then '' else 's' end%>.
</h1>

<h2>
  <%= pluralize(@dept_tour_requests_unresponded.count,'request') %> must be responded to:
</h2>
<table>
  <tr>
    <th>Requestee Name</th>
    <th>Requested Date</th>
    <th>Date Submitted</th>
    <th>Contact e-mail</th>
    <th>Contact phone</th>
    <th>Additional Comments</th>
    <th colspan="3">Actions</th>
  </tr>

<% @dept_tour_requests_unresponded.each do |dept_tour_request| %>
  <tr>
    <td><%= dept_tour_request.name %> </td>
    <td><%= dept_tour_request.date %> </td>
    <td><%= dept_tour_request.submitted %></td>
    <td><%= dept_tour_request.contact %></td>
    <td><%= dept_tour_request.phone %></td>
    <td><%= dept_tour_request.comments %></td>
    <td><%= link_to 'Show and Respond', dept_tour_request %></td>
    <td><%= link_to 'Edit', edit_dept_tour_request_path(dept_tour_request) %></td>
    <td><%= form_tag(dismiss_dept_tour_request_path(dept_tour_request),:method=>:post) do %>
      <%= submit_tag "Dismiss" %>
    <% end %></td>
  </tr>
<% end %>
</table>

<br />
<hr />

<h2>
  <%= @dept_tour_requests_pending.count %> 
  <%= if  @dept_tour_requests_pending.count == 1 then 'request is' else 'requests are' end %> 
  pending:
</h2>

<table>
  <tr>
    <th>Requestee Name</th>
    <th>Requested Date</th>
    <th>Date Submitted</th>
    <th>Contact e-mail</th>
    <th>Contact phone</th>
    <th>Additional Comments</th>
    <th colspan="3">Actions</th>
  </tr>

<% @dept_tour_requests_pending.each do |dept_tour_request| %>
  <tr>
    <td><%= dept_tour_request.name %> </td>
    <td><%= dept_tour_request.date %> </td>
    <td><%= dept_tour_request.submitted %></td>
    <td><%= dept_tour_request.contact %></td>
    <td><%= dept_tour_request.phone %></td>
    <td><%= dept_tour_request.comments %></td>
    <td><%= link_to 'Show', dept_tour_request %></td>
    <td><%= link_to 'Edit', edit_dept_tour_request_path(dept_tour_request) %></td>
    <td><%= form_tag(dismiss_dept_tour_request_path(dept_tour_request),:method=>:post) do %>
      <%= submit_tag "Dismiss" %>
    <% end %></td>
  </tr>
<% end %>
</table>
