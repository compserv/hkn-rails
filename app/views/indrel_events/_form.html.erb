<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :time %><br />
    <%= f.datetime_select :time %> PST
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= collection_select :indrel_event, :location_id, Location.all, :id, :name, {:include_blank => "None"} %>
  </div>
  <div class="field">
    <%= f.label :indrel_event_type %><br />
    <%= collection_select :indrel_event, :indrel_event_type_id, IndrelEventType.all, :id, :name, {:include_blank => "None"} %>
  </div>
  <div class="field">
    <%= f.label :food %><br />
    <%= f.text_area :food %>
  </div>
  <div class="field">
    <%= f.label :prizes %><br />
    <%= f.text_area :prizes %>
  </div>
  <div class="field">
    <%= f.label :turnout %><br />
    <%= f.text_field :turnout %>
  </div>
  <div class="field">
    <%= f.label :company %><br />
    <%= collection_select :indrel_event, :company_id, Company.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :contact %><br />
    <%= collection_select :indrel_event, :contact_id, Contact.all, :id, :name, {:include_blank => "None"} %>
  </div>
  <div class="field">
    <%= f.label :officer %><br />
    <%= f.text_field :officer %>
  </div>
  <div class="field">
    <%= f.label :feedback %><br />
    <%= f.text_area :feedback %>
  </div>
  <div class="field">
    <%= f.label :comments %><br />
    <%= f.text_area :comments %>
  </div>
  <div class="field-submit">
    <%= f.submit "Submit" %>
  </div>
<% end %>
