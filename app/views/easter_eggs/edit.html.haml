.no-translation
  = form_tag :action => :update do
    = check_box_tag :piglatin, true, @easter_eggs[:piglatin]
    = label_tag :piglatin, "Pig Latin mode"
    %br/
    = check_box_tag :moonspeak, true, @easter_eggs[:moonspeak]
    = label_tag :moonspeak, "Moonspeak mode"
    %br/
    - if @easter_eggs[:mirror]
      = check_box_tag :mirror, true, @easter_eggs[:mirror]
      = label_tag :mirror, "Mirror mode"
      %br/
    = check_box_tag :acid, true, @easter_eggs[:acid]
    = label_tag :acid, "Acid mode"
    %br/
    = check_box_tag :dt, true, @easter_eggs[:dt]
    = label_tag :dt, "DT_? mode"
    %br/
    = check_box_tag :kappa, true, @easter_eggs[:kappa]
    = label_tag :kappa, "Kappa mode"
    %br/ 
    = hidden_easter_egg :b, "B mode"
    = submit_tag
